{
  "manifest_version": 3,
  "name": "Smart Session & Tab Manager",
  "version": "1.3",
  "description": "Save, restore, rename, and manage tabs. Close inactive tabs after a set time.",
  "permissions": ["tabs", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
